<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:easemob="http://schemas.android.com/apk/res-auto"    
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="#f2f0eb" >

    <com.easemob.widget.EMChatWidget
        android:id="@+id/chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        easemob:hideTitleBar="false"
        easemob:hideAvatar="false"
        easemob:background="@drawable/em_user_intro_pic"
        easemob:textSize="18"
        easemob:textColorStateList="@color/chat_text_color"
        easemob:textStyle="bold|italic"
        easemob:textTypeFace="sans"
        easemob:tb_video_call_disable="true"
        easemob:tb_voice_call_disable="true"
        easemob:tb_takepic_disable="true"
        easemob:tb_image_bg="@drawable/cs_chat_image_selector"
        easemob:voiceModeBtnVisible="false"
        easemob:backGroundColor="@color/chat_bg_color"
        />

</RelativeLayout>